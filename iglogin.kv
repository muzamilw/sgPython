<IGLogin>:
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Please enter your Instagram username and password to continue.'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Enter your Instsagram username'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28
                text: 'nevillekmiec'

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28
                text:'!_LKvXc1'

        Button:
            text: 'Login on Instagram'
            font_size: 24

            on_press: root.do_login(login.text, password.text)