<Ready>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Ready to start social growth"
            font_size: 20
            size_hint: 1, .2
        Label:
            text: "nev"
            font_size: 20
            size_hint: 1, .2
            id: lblusername

        Button:
            text: "Start the Bot"
            font_size: 15
            on_press: root.startBot()
            size_hint: 1, .2

        GridLayout:
            cols: 6
            orientation: 'horizontal'
            padding: 20
            spacing: 10
            Label:
                size_hint_x: None
                text: "Follow"
                size_hint: 1, 0.8
            Label:
                text: "UnFollow"
                
            Label:
                text: "Likes"
                
            Label:
                text: "StoryView"
            Label:
                text: "Comments"
                
            Label:
                text: "Session Time"
                
            Label:
                id: lblFollow
                text: "0 / 0"
                size_hint: 1, 0.8
            Label:
                id: lblUnFollow
                text: "0 / 0"
               
            Label:
                id: lblLike
                text: "0 / 0"
            Label:
                id: lblStoryView
                text: "0 / 0"
            Label:
                id: lblComments
                text: "0 / 0"
            Label:
                id: lblTotalTime
                text: "0:00"
            Label:
                
                text: "Like Exchange"
                size_hint: 1, 0.8
            Label:
                text: "Follow Exchange"
                
            Label:
                text: "Comment Exchange"
                
            Label:
                text: ""
                
            Label:
                text: ""
            Label:
                text: ""
                
            Label:
                text: " 0 / 0 "
                size_hint: 1, 0.8
                id: lblLikeExchange
            Label:
                text: " 0 / 0 "
                size_hint: 1, 0.8
                id: lblFollowExchange
            Label:
                id: lblCommentExchange
                text: " 0 / 0 "
                size_hint: 1, 0.8
               
            
            
            
        TextInput:
            id:logLabel
            text: "Bot Log here"
            font_size: 14
            multiline:True
        Button:
            text: "Stop & Log Off"
            font_size: 15
            on_press: root.disconnect()
            size_hint: 1, .1
