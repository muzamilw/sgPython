#:kivy 1.9.0

<Ready>:
    BoxLayout:
        orientation: 'vertical'
        
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "data//bg.jpg"

        MDLabel:
            text: "Social Planner"
            font_size: 20
           
        MDLabel:
            text: "Loggedin Username : "
            font_size: 20
           
            id: lblusername
        
        GridLayout:
            cols: 4
            orientation: 'horizontal'
           

            MDRaisedButton:
                text: "Start Sequence"
                on_press: root.startBot()
                id: btnStart
            MDLabel:
                id: lblTotalTime
                text: "0:00"
            
            MDRaisedButton:
                text: "Stop"
                on_press: root.disconnect()
                id : btnStop

        GridLayout:
            cols: 4
            orientation: 'horizontal'
            padding: 20
            spacing: 10
            MDLabel:
                size_hint_x: None
                text: "F"
                size_hint: 1, 0.8
            MDLabel:
                text: "U"
                
            MDLabel:
                text: "L"
                
            MDLabel:
                text: "S"
            MDLabel:
                text: "C"
                
           
                
            MDLabel:
                id: lblFollow
                text: "0 / 0"
                size_hint: 1, 0.8
            MDLabel:
                id: lblUnFollow
                text: "0 / 0"
               
            MDLabel:
                id: lblLike
                text: "0 / 0"
            MDLabel:
                id: lblStoryView
                text: "0 / 0"
            MDLabel:
                id: lblComments
                text: "0 / 0"
           
            MDLabel:
                
                text: "Like Exchange"
                size_hint: 1, 0.8
            MDLabel:
                text: "Follow Exchange"
                
            MDLabel:
                text: "Comment Exchange"
                
            MDLabel:
                text: ""
                
            MDLabel:
                text: ""
            MDLabel:
                text: ""
                
            MDLabel:
                text: " 0 / 0 "
                size_hint: 1, 0.8
                id: lblLikeExchange
            MDLabel:
                text: " 0 / 0 "
                size_hint: 1, 0.8
                id: lblFollowExchange
            MDLabel:
                id: lblCommentExchange
                text: " 0 / 0 "
                size_hint: 1, 0.8
               
            
            
            
        MDTextFieldRect:
            id:logLabel
            text: "Bot Log here"
            font_size: 16
            multiline:True
        
